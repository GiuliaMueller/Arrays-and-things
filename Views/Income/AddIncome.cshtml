@model BudgetApp.ViewModels.AddIncomeViewModel

@{
    
}

<h1>Add Income</h1>

<form asp-controller="Income" asp-action="AddIncome" method="post">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input class="form-control" asp-for="Amount" />
        <span asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.IncomeTypes"></select>
    </div>

   @* <div class="form-group">
        <label asp-for="Frequency"></label>
        <select asp-for="Frequency" asp-items="Model.IncomeFrequencies"></select>
    </div>*@

    <input type="submit" value="Add Income" />
