@model BudgetApp.ViewModels.AddSavingViewModel

@{

}

<h1>Add Saving</h1>

<form asp-controller="Saving" asp-action="AddSaving" method="post">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input class="form-control" asp-for="Amount" />
        <span asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.SavingTypes"></select>
    </div>

   
    <input type="submit" value="Add Savings Goal" />
</form>
